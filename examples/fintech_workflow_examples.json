{
  "workflows": [
    {
      "name": "loan_application_after_kyc",
      "description": "Loan application requiring KYC verification",
      "dependency_type": "workflow_dependency",
      "dependencies": ["kyc_verification"]
    },
    {
      "name": "mortgage_application",
      "description": "Mortgage requiring KYC + Credit Check",
      "dependency_type": "multiple_workflow_dependencies",
      "dependencies": ["kyc_verification", "credit_check"]
    },
    {
      "name": "premium_credit_card",
      "description": "Premium card requiring account OR high credit score",
      "dependency_type": "conditional_workflow_dependency",
      "dependencies": [
        {"type": "or", "workflows": ["account_opening"], "or_condition": "credit_score >= 750"}
      ]
    },
    {
      "name": "wire_transfer",
      "description": "Wire transfer requiring AML screening",
      "dependency_type": "external_service_dependency",
      "dependencies": [
        {"type": "external", "service": "aml_screening", "api": "https://api.bank.com/aml/check"}
      ]
    },
    {
      "name": "account_opening_with_kyc_step",
      "description": "Account opening with KYC step dependency",
      "dependency_type": "step_dependency",
      "dependencies": [
        {"type": "step", "step_id": "kyc_verification", "condition": "status == 'approved'"}
      ]
    },
    {
      "name": "investment_account",
      "description": "Investment account requiring 30-day account age",
      "dependency_type": "time_based_dependency",
      "dependencies": [
        {"type": "workflow", "name": "account_opening", "time_condition": "completed_at < (now - 30 days)"}
      ]
    },
    {
      "name": "loan_approval",
      "description": "Loan approval based on credit score from previous step",
      "dependency_type": "data_condition_dependency",
      "dependencies": [
        {"type": "data", "field": "financial_information.credit_score", "condition": ">= 650"}
      ]
    },
    {
      "name": "business_account",
      "description": "Business account requiring registration + tax ID",
      "dependency_type": "parallel_dependencies",
      "dependencies": [
        {"type": "workflow", "name": "business_registration"},
        {"type": "workflow", "name": "tax_id_verification"}
      ]
    },
    {
      "name": "payment_processing",
      "description": "Payment requiring gateway availability",
      "dependency_type": "external_api_dependency",
      "dependencies": [
        {"type": "external", "service": "payment_gateway", "health_check": true}
      ]
    },
    {
      "name": "collateral_loan",
      "description": "Collateral step only if loan > $100k",
      "dependency_type": "conditional_step_dependency",
      "dependencies": [
        {"type": "data", "field": "loan_details.amount", "condition": "> 100000"}
      ]
    },
    {
      "name": "investment_account_chain",
      "description": "Investment → Account → KYC chain",
      "dependency_type": "chained_workflow_dependencies",
      "dependencies": [
        {"type": "workflow", "name": "account_opening", "which_depends_on": ["kyc_verification"]}
      ]
    },
    {
      "name": "credit_check_with_retry",
      "description": "Credit check with retry logic",
      "dependency_type": "external_with_retry",
      "dependencies": [
        {
          "type": "external",
          "service": "credit_check",
          "api": "https://api.bank.com/credit/check",
          "retry": {"max_attempts": 3, "delay_seconds": 60},
          "timeout_seconds": 300
        }
      ]
    },
    {
      "name": "loan_disbursement",
      "description": "Loan disbursement requiring document signing",
      "dependency_type": "user_action_dependency",
      "dependencies": [
        {"type": "workflow", "name": "document_signing", "user_action_required": true}
      ]
    },
    {
      "name": "large_loan_approval",
      "description": "Large loan requiring manager approval",
      "dependency_type": "approval_workflow_dependency",
      "dependencies": [
        {
          "type": "workflow",
          "name": "manager_approval",
          "condition": {"state_data.approved": true}
        }
      ]
    },
    {
      "name": "international_wire",
      "description": "International wire requiring sanctions screening",
      "dependency_type": "compliance_dependency",
      "dependencies": [
        {
          "type": "external",
          "service": "sanctions_screening",
          "api": "https://api.bank.com/sanctions/check",
          "condition": "response.status == 'clear'"
        }
      ]
    }
  ]
}


